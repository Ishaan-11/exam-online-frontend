<div class="card">
  <div class="card-header">
    <strong>
      User Profile
    </strong>
  </div>
  <div class="card-body">
    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-md-3 col-form-label">School</label>
        <div class="col-md-9">
          <Input 
            class="form-control" 
            id="hf-email" 
            autocomplete="off" 
            @disabled={{true}}
            @value={{@profile.school}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label">Class</label>
        <div class="col-md-9">
          <Input 
            class="form-control" 
            id="hf-email" 
            autocomplete="off" 
            @disabled={{true}}
            @value={{@profile.class}}
          />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-md-3 col-form-label">Current Level</label>
        <div class="col-md-9">
          <Input 
            class="form-control" 
            id="hf-email" 
            autocomplete="off" 
            @disabled={{true}}
            @value={{@profile.currentLevel}}
          />
        </div>
      </div>
    </form>
  </div>
</div>