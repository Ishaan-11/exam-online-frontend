<div class="card border-primary">
  <div class="card-header">
    <h3>Questions</h3>
  </div>
  <div class="card-body">
    <div class="navigation-pad">
      {{#each @questions as |question i|}}
        <Question::QuestionNavigationItem
          @index={{inc i}}
          @question={{question}}
          @isCurrentQuestion={{eq @currentQuestion question}}
          @onClick={{action @onNavigate i}}
        />
      {{/each}}
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <div class="d-flex flex-col align-items-center">
      <div class="bg-info" style="height: 20px; width: 20px;"></div>      
      <strong class="mr-3">Current Question</strong>
    </div>
    <div class="d-flex flex-col align-items-center">
      <div class="bg-dark" style="height: 20px; width: 20px;"></div>      
      <strong class="mr-3">Not Attempted</strong>
    </div>
    <div class="d-flex flex-col align-items-center">
      <div class="bg-warning" style="height: 20px; width: 20px;"></div>      
      <strong class="mr-3">To be Reviewed</strong>
    </div>
    <div class="d-flex flex-col align-items-center">
      <div class="bg-success" style="height: 20px; width: 20px;"></div>      
      <strong class="mr-3">Attempted</strong>
    </div>
  </div>
</div>
