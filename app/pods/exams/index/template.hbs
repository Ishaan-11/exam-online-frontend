{{#if this.selectedExaminations.length}}
  <Examination::SelectedExamination 
    @selectedExaminations={{this.selectedExaminations}}
    @onRemove={{action 'removeExamination'}}
  />
{{/if}}

<div class="d-flex justify-content-between align-items-center">
  <h1>Upcoming Exams</h1>

  <div class="input-prepend input-group w-50">
    <Input 
      class="form-control" 
      placeholder="Search"
      @value={{q}}
    />
  </div>
</div>

<div class="row mt-4">
  {{#each examinations as |examination|}}
    <div class="col-md-4 col-lg-3">
      <Examination::ExaminationCard 
        @examination={{examination}}
      >
        <button 
          class="btn btn-outline-secondary white mt-2"
          {{action 'selectExamination' examination}}
        >
          Enroll
        </button>
      </Examination::ExaminationCard>
    </div>
  {{/each}}
</div>
